{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
