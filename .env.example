# Common Environment Variables
NODE_ENV=production
MONGODB_URI=mongodb://mongodb:27017/rwa-platform
REDIS_URI=redis://redis:6379
RABBITMQ_URL=amqp://user:password@rabbitmq:5672

# Gateway Service
GATEWAY_PORT=3000

# Auth Service
AUTH_PORT=3001
JWT_SECRET=your-jwt-secret-here

# Notification Service
NOTIFICATION_PORT=3002
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# Blockchain Scanner Service
BLOCKCHAIN_PORT=3005
BLOCKCHAIN_RPC_URL=your-blockchain-rpc-url

# Worker Service
WORKER_PORT=3006

# KYC Service
KYC_PORT=3007
SHUFTIPRO_CLIENT_ID=your-shuftipro-client-id
SHUFTIPRO_SECRET_KEY=your-shuftipro-secret-key
SUMSUB_APP_TOKEN=your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret-key

# AI Service
AI_PORT=3008
OPENAI_API_KEY=your-openai-api-key

# Enterprise Service
ENTERPRISE_PORT=3009

# Chat Service
CHAT_PORT=3011

# Signer Services
SIGNER_PORT=3012
# Each signer needs its own private key (64-char hex)
SIGNER_PRIVATE_KEY_1=your-first-signer-64-char-hex-private-key
SIGNER_PRIVATE_KEY_2=your-second-signer-64-char-hex-private-key
SIGNER_PRIVATE_KEY_3=your-third-signer-64-char-hex-private-key

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin

# RabbitMQ
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASS=password
